@model FootBalls.Models.TblUser
@{
    ViewBag.Title = "Registration";
    Layout = "~/Views/Shared/_RegistrationLayout.cshtml";
}

<div class="main">


    <div class="container">

        <div class="signup-content">
            <div class="signup-img">
                <img src="~/Content/Reg/images/F612.jpg" alt="">
            </div>
            <div class="signup-form">
                @using (Html.BeginForm("Registration", "Account", FormMethod.Post, new { @class = "register-form" }))
                {


                    <div class="form-row">
                        <div class="form-group">
                            <label for="name">Name :</label>
                            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "", autocomplete = "off" } })
                            @Html.ValidationMessageFor(model => model.Name, "", new { @style = "color:red" })
                        </div>

                        <div class="form-group">
                            <label for="name">Password :</label>
                            @Html.PasswordFor(model => model.Password, new { @class = "" })
                            @Html.ValidationMessageFor(model => model.Password, "", new { @style = "color:red" })
                        </div>
                    </div>


                    <div class="form-row">
                        <div class="form-group">
                            <label for="name">Email ID :</label>
                            @Html.EditorFor(model => model.EmailId, new { htmlAttributes = new { @class = "", autocomplete = "off" } })
                            @Html.ValidationMessageFor(model => model.EmailId, "", new { @style = "color:red" })
                        </div>

                        <div class="form-group">
                            <label for="name">Mob. No. :</label>
                            @Html.EditorFor(model => model.MobileNumber, new { htmlAttributes = new { @class = "", autocomplete = "off" } })
                            @Html.ValidationMessageFor(model => model.MobileNumber, "", new { @style = "color:red" })
                        </div>
                    </div>


                    <div class="form-row">
                        <div class="form-group">
                            <label for="name">Category :</label>
                            @Html.DropDownList("Category",new List<SelectListItem>()
                            {
                                new SelectListItem(){ Text = "Private", Value="1"},
                                new SelectListItem(){ Text = "Private Sector", Value="2"},
                                new SelectListItem(){ Text = "Govt. Institution", Value="3"}
                            }, "--Select--", new { @class = "", placeholder="Category"})
                            @Html.ValidationMessageFor(model => model.Category, "", new { @style = "color:red" })
                        </div>
                    </div>
                   
                    <div class="form-submit">
                        <a href="@Url.Action("Login","Account")"><input type="button" value="Cancel" class="submit" name="reset" id="reset" /></a>
                        <input type="submit" value="Submit" class="submit" name="submit" id="submit" />
                    </div>




              

            }
            </div>
    </div>
</div>
    </div>
