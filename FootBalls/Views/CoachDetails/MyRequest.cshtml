<div class="table-responsive">
    <h4>Request From Team</h4>
    <table style="width:50%;">

        <thead>
            <tr style="border-bottom:3px solid black;">
                <th style="border-bottom:3px solid black"> Request Recived Date </th>
                <th style="border-bottom:3px solid black"> Team </th>
                <th style="border-bottom:3px solid black"> Team Sponsor </th>
                <th style="border-bottom:3px solid black"> Start Date </th>
                <th style="border-bottom:3px solid black"> End Date </th>
                <th style="border-bottom:3px solid black"> Request Status </th>

            </tr>
        </thead>

        <tbody>
            @if (Model != null)
            {
                foreach (var items in Model.CoachRequestTbl)
                {
                    <tr>
                        <td>@items.CreatedDate </td>
                        <td>@items.TblTeam.TeamName</td>
                        <td>@items.TblTeam.TblTeamSponsor.Name</td>
                        <td>@items.StartDate</td>
                        <td>@items.EndDate</td>
                        @if (items.Approved == 0)
                        {
                            <td>Pending</td>
                        }
                        else if (items.Approved == 1)
                        {
                            <td>Approved</td>
                        }
                        else
                        {
                            <td>Rejected</td>
                        }
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td> </td>
                    <td> </td>
                    <td> </td>
                    <td> </td>
                    <td> </td>
                    <td> </td>
                </tr>

            }
        </tbody>

    </table>
</div>

