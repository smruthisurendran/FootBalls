<div align="center">

    <form style="color:whitesmoke;font-size:medium;">
        <fieldset>
            <div>
                @Html.HiddenFor(model => model.CoachTbl.UserId)
                @Html.HiddenFor(model => model.CoachTbl.CoachId)
                <div class="form-row">

                    <div class="form-group">

                        <br />
                        <br />
                        @if (@ViewBag.ImageData != null)
                        {
                            <div>
                                <img src="@ViewBag.ImageData" width="150" height="200">
                            </div>
                        }
                        else
                        {
                            <div>
                                <img src="~/Content/images/no-image-480x480.png" width="150" height="200">
                            </div>
                        }
                        <br />
                        <div>

                            @Html.DisplayFor(model => model.CoachTbl.Coach)
                        </div>
                    </div>
                    <div class="form-group">
                        <br />
                        <br />
                        <div>
                            <label><b>Coach Name : </b></label>
                            @Html.DisplayFor(model => model.CoachTbl.Coach)
                        </div>
                        <br />
                        <br />

                        <div>
                            <label><b> DOB : </b></label>
                            @Html.DisplayFor(model => model.CoachTbl.DOB)
                        </div>
                        <br />
                        <br />

                        <div>
                            <label><b>Length :</b></label>
                            @Html.DisplayFor(model => model.CoachTbl.Length)
                        </div>
                        <br />
                        <br />

                        <div>
                            <label><b>Weight :</b></label>
                            @Html.DisplayFor(model => model.CoachTbl.Weight)
                        </div>

                    </div>


                    <div class="form-group">
                        <br />
                        <br />

                        <div>
                            <label><b>Country : </b></label>
                            @Html.DisplayFor(model => model.CoachTbl.TblCity.TblRegion.TblCountry.Country)
                        </div>
                        <br />
                        <br />

                        <div>
                            <label><b> Region : </b></label>
                            @Html.DisplayFor(model => model.CoachTbl.TblCity.TblRegion.Region)
                        </div>
                        <br />
                        <br />

                        <div>
                            <label><b>City : </b></label>
                            @Html.DisplayFor(model => model.CoachTbl.TblCity.City)
                        </div>
                    </div>


                </div>
            </div>
        </fieldset>
    </form>
</div>
<div align="center">
    <h4 style="color:white">Team Details</h4>
    <form style="color:whitesmoke;font-size:medium;">
        <fieldset>
            <div>
                <table cellspacing="10" cellpadding="6" style="width:50%;" frame="border" class="table table-bordered table-condensed table-striped table-hover sortable">
                    <thead style="border-bottom:3px solid black">
                        <tr class="danger" style="border-bottom:3px solid black">
                            <th style="border-bottom:3px solid black">Team Name</th>
                            <th style="border-bottom:3px solid black">Sponsor Name</th>
                            <th style="border-bottom:3px solid black">Team Registration Date</th>
                            <th style="border-bottom:3px solid black">Team Expiration Date</th>
                        </tr>
                    </thead>
                    <tbody style="border-bottom:2px solid black;">
                        @foreach (var items in Model.TeamMembersTbl)
                        {
                            <tr class="danger" style="border:3px solid black">
                                <td align="center">@items.TblTeam.TeamName</td>
                                <td align="center">@items.TblTeam.TblTeamSponsor.Name</td>
                                <td align="center">@items.TblTeam.RegistrationDate</td>
                                <td align="center">@items.TblTeam.ExpirationDate</td>
                            </tr>

                        }

                    </tbody>
                </table>


            </div>
        </fieldset>
    </form>
</div>
