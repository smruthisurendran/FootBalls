@model FootBalls.Models.TblPlayer
@{
    ViewBag.Title = "PlayerRegistration";
    Layout = "~/Views/Shared/_PlayerRegistrationLayout.cshtml";
}


<div class="main">
    <div class="container">

        <div class="signup-content">
            <div class="signup-img">
                <img src="~/Content/PlayerReg/images/F7.jpg" alt="">
            </div>

            <div class="signup-form">
                @using (Html.BeginForm("EditProfile", "PlayerDetails", FormMethod.Post, new { @class = "register-form", enctype = "multipart/form-data" }))
                {
                    @Html.HiddenFor(model => model.PlayerId)
                    @Html.HiddenFor(model => model.UserId)
                    @Html.HiddenFor(model => model.Status)
                    <h2>Update Profile </h2>
                    <div class="form-row">
                        <div class="form-group">
                            @Html.LabelFor(model => model.Player, new { @class = "" })
                            @Html.EditorFor(model => model.Player, new { htmlAttributes = new { @class = "form-control", placeholder = " Name", autocomplete = "off" } })
                            @Html.ValidationMessageFor(model => model.Player, "", new { @style = "color:red" })
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.DOB, new { @class = "" })
                            @Html.EditorFor(model => model.DOB, new { htmlAttributes = new { @class = "datepicker text-box single-line", placeholder = "Please Click Here ", autocomplete = "off" } })
                            @Html.ValidationMessageFor(model => model.DOB, "", new { @style = "color:red" })
                        </div>
                    </div>
                    <br />
                    <div class="form-row">
                        <div class="form-group">
                            @Html.LabelFor(model => model.Photo, new { @class = "" })
                            <input id="Photo" title="Upload Image" type="file" name="postedFile" />
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.Mobile, new { @class = "" })
                            @Html.EditorFor(model => model.Mobile, new { htmlAttributes = new { @class = "", placeholder = " Mobile Number", autocomplete = "off" } })
                            @Html.ValidationMessageFor(model => model.Mobile, "", new { @style = "color:red" })
                        </div>
                    </div>
                    <br />
                    <div class="form-row">
                        <div class="form-group">
                            @Html.LabelFor(model => model.Length, new { @class = "" })
                            @Html.EditorFor(model => model.Length, new { htmlAttributes = new { @class = "", placeholder = " Length", autocomplete = "off" } })
                            @Html.ValidationMessageFor(model => model.Length, "", new { @style = "color:red" })
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.Weight, new { @class = "" })
                            @Html.EditorFor(model => model.Weight, new { htmlAttributes = new { @class = "", placeholder = " Weight", autocomplete = "off" } })
                            @Html.ValidationMessageFor(model => model.Weight, "", new { @style = "color:red" })
                        </div>
                    </div>
                    <br />
                    <div class="form-row">
                        <div class="form-group">
                            @Html.LabelFor(model => model.TblCity.TblRegion.TblCountry.Country, new { @class = "" })
                            @Html.DropDownList("country", (IEnumerable<SelectListItem>)ViewBag.CountryList, Model.TblCity.TblRegion.TblCountry.Country, new { @class = "", placeholder = "Region" })
                            @Html.ValidationMessageFor(model => model.TblCity.TblRegion.TblCountry.Country, "", new { @style = "color:red" })
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.TblCity.TblRegion.Region, new { @class = "" })
                            @Html.DropDownList("region", new SelectList(string.Empty, "Value", "Text"), Model.TblCity.TblRegion.Region, new { @class = "", placeholder = "Region" })
                            @Html.ValidationMessageFor(model => model.TblCity.TblRegion.Region, "", new { @style = "color:red" })
                        </div>
                    </div>
                    <br />
                    <div class="form-row">
                        <div class="form-group">
                            @Html.LabelFor(model => model.TblCity.City, new { @class = "" })
                            @Html.DropDownList("city", new SelectList(string.Empty, "Value", "Text"), Model.TblCity.City, new { @class = "", placeholder = "City" })
                            @Html.ValidationMessageFor(model => model.TblCity.City, "", new { @style = "color:red" })
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.PlayingFoot, new { @class = "" })
                            @Html.DropDownList("PlayingFoot",new List<SelectListItem>()
                                       {
                                           new SelectListItem(){ Text = "Right", Value="1"},
                                           new SelectListItem(){ Text = "Left", Value="2"},
                                           new SelectListItem(){ Text = "Both", Value="3"}
                                       }, "<Please Select>", new { @class = "form-row"})
                            @Html.ValidationMessageFor(model => model.PlayingFoot, "", new { @style = "color:red" })
                        </div>
                    </div>
                    <input type="button" value="Plaing Place" onClick="showHideDiv('divMsg')" /><br>
                    <div id="divMsg" style="background-color:darkolivegreen; color: #ffffff; text-align:center; display:none">
                        <fieldset>

                            <div class="form-row">
                                <div class="form-group">
                                    <div>
                                        <input type="checkbox" name="PlayingPlace" value="1">
                                        <label for=" Goalkeeper"> Goalkeeper</label>
                                    </div>
                                    <div>
                                        <input type="checkbox" name="PlayingPlace" value="2">
                                        <label for="Defenders">Defenders</label>
                                    </div>
                                    <div>
                                        <input type="checkbox" name="PlayingPlace" value="3">
                                        <label for="Strikers">Strikers</label>
                                    </div>
                                    <div>
                                        <input type="checkbox" name="PlayingPlace" value="4">
                                        <label for="Forwards">Forwards</label>
                                    </div>
                                    <div>
                                        <input type="checkbox" name="PlayingPlace" value="5">
                                        <label for="Midfielders">Midfielders</label>
                                    </div>
                                    <div>
                                        <input type="checkbox" name="PlayingPlace" value="6">
                                        <label for="Sweeper">Sweeper</label>
                                    </div>
                                </div>


                                <div class="form-group">
                                    <div>
                                        <input type="checkbox" name="PlayingPlace" value="7">
                                        <label for=" RightForwards"> Right Forward</label>
                                    </div>
                                    <div>
                                        <input type="checkbox" name="PlayingPlace" value="8">
                                        <label for="LeftForwards">Left Forward</label>
                                    </div>
                                    <div>
                                        <input type="checkbox" name="PlayingPlace" value="9">
                                        <label for="RightWings">Right Wing</label>
                                    </div>
                                    <div>
                                        <input type="checkbox" name="PlayingPlace" value="10">
                                        <label for="LeftWings">Left Wing</label>
                                    </div>
                                    <div>
                                        <input type="checkbox" name="PlayingPlace" value="11">
                                        <label for="RightMidfielders">Right Midfielder</label>
                                    </div>
                                    <div>
                                        <input type="checkbox" name="PlayingPlace" value="12">
                                        <label for="LeftMidfielders">Left Midfielder</label>
                                    </div>
                                </div>
                            </div>

                        </fieldset>
                    </div>
                    <div class="form-submit">
                        <a href="@Url.Action("PlayerView","PlayerDetails",new RouteValueDictionary(new { id = Model.PlayerId }))"><input type="button" value="Cancel" class="submit" name="reset" id="reset" /></a>
                        <input type="submit" value="Save" class="submit" name="submit" id="submit" />
                    </div>

                }
            </div>

        </div>

    </div>

</div>

<link href="~/Content/themes/base/jquery-ui.min.css" rel="stylesheet" />


@section scripts{

    @Scripts.Render("~/bundles/jqueryui")
    @Styles.Render("~/Content/cssjqryUi")

    <script src="~/Scripts/jquery-ui-1.12.1.min.js"></script>
    <script type="text/javascript">
            $(document).ready(function () {
                $('input[type=datetime]').datepicker({
                    dateFormat: "dd/mm/yy",
                    changeMonth: true,
                    changeYear: true,
                    yearRange: "-60:+0",

                });

            });

            // for checkbox div show/hide
            function showHideDiv(ele) {
                var srcElement = document.getElementById(ele);
                if (srcElement != null) {
                    if (srcElement.style.display == "block") {
                        srcElement.style.display = 'none';
                    }
                    else {
                        srcElement.style.display = 'block';
                    }
                    return false;
                }
            }

            // for region dropdown
             $(document).ready(function () {

        $("#country").change(function () {
            $("#region").empty();
            $.ajax({
                type: 'POST',
                url: '@Url.Action("getRegion")',
                dataType: 'json',
                data: { id: $("#country").val() },
                success: function (region) {
                    $.each(region, function (i, region) {
                        $("#region").append('<option value="' + region.Value + '">' + region.Text + '</option>');
                    });
                },
                error: function (ex) {
                    alert('Failed to retrieve states.' + ex);
                }
            });
            return false;
        })
    });
            //for city dropdown
         $(document).ready(function () {
        $("#region").change(function () {
            $("#city").empty();
            $.ajax({
                type: 'POST',
                url: '@Url.Action("getCity")',
                dataType: 'json',
                data: { id: $("#region").val() },
                success: function (city) {
                    $.each(city, function (i, city) {
                        $("#city").append('<option value="'+ city.Value + '">'+ city.Text + '</option>');
                    });
                },
                error: function (ex) {
                    alert('Failed.' + ex);
                }
            });
            return false;
        })
            });

    </script>

}

